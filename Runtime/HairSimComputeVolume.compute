#define CLEAR_WIDTH 8
#define CLEAR_NUM_X CLEAR_WIDTH
#define CLEAR_NUM_Y CLEAR_WIDTH
#define CLEAR_NUM_Z CLEAR_WIDTH

[numthreads(CLEAR_NUM_X, CLEAR_NUM_Y, CLEAR_NUM_Z)]
